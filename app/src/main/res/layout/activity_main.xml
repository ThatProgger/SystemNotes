<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">



    <FrameLayout
        android:id="@+id/fragmentContainerIndetifier"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottonNavigationMenuIdentifier"/>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottonNavigationMenuIdentifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:theme="@style/Theme.MaterialComponents.Light.rev2"
        app:menu="@menu/botton_navigation_menu"
        app:labelVisibilityMode="labeled"
        />


</RelativeLayout>