<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.SystemNotes" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MaterialComponents.Light.rev2" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/Active</item>
        <item name="colorOnSurface">@color/NonActive</item>
        <item name="colorSurface">@color/ContainerColor</item>
    </style>



    <style name="Widget.MaterialComponents.Button.TextButton.rev2" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/ic_arrowback</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.rev3" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Стиль для ToggleButton -->
    <style name="toggleButtonStyle">
        <item name="android:width">200dp</item>
        <item name="android:height">30dp</item>
        <item name="android:background">@drawable/selector_toggle_button</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textOn">@string/stopMeasuring</item>
        <item name="android:textOff">@string/startMeasuring</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Стиль для сервиса -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.rev2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="hintEnabled">true</item>
        <item name="android:hint">test</item>
    </style>

    <!-- Стиль для текста в сервисе -->
    <style name="customTextStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Стиль для edit text -->
    <style name="customEditTextAddNewNotes">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/drawable_cursor_edit_text</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


</resources>